---
import "../../styles/LoginForm.css";

const { error, message } = Astro.props;
---

<div class="auth-form-container">
  <h2 class="form-title">Login</h2>

  {/* Debug: Mostrar los valores para verificar */}
  <!-- {console.log('Error:', error, 'Message:', message)} -->

  {error && <div class="error-message">{decodeURIComponent(error)}</div>}
  {message && <div class="success-message">{decodeURIComponent(message)}</div>}

  {/* Mostrar mensajes de error */}
  {error && <div class="error-message">{decodeURIComponent(error)}</div>}

  {/* Mostrar mensajes de Ã©xito (si los hay) */}
  {message && <div class="success-message">{decodeURIComponent(message)}</div>}

  <form method="POST" action="/api/auth/login" class="auth-form">
    <div class="form-group">
      <label for="email">Email</label>
      <input
        type="email"
        id="email"
        name="email"
        required
        placeholder="your@email.com"
      />
    </div>

    <div class="form-group">
      <label for="password">Password</label>
      <input
        type="password"
        id="password"
        name="password"
        required
        placeholder="Your password"
        minlength="6"
      />
    </div>

    <button type="submit" class="auth-button">Login</button>
  </form>

  <div class="auth-links">
    <p>
      Don't you have an account? <a href="/register" class="auth-link"
        >Register here</a
      >
    </p>
  </div>
</div>
