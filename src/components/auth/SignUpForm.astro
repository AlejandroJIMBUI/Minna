---
// Componente de registro que usa TU lógica de supabase.js
---

<div class="auth-form-container">
  <h2>Crear Cuenta</h2>

  <form id="signupForm" class="auth-form">
    <div class="form-group">
      <label for="username">Nombre de usuario</label>
      <input
        type="text"
        id="username"
        name="username"
        required
        placeholder="tu_usuario"
        pattern="[a-zA-Z0-9_]+"
        title="Solo letras, números y guiones bajos"
      />
    </div>

    <div class="form-group">
      <label for="fullName">Nombre completo</label>
      <input
        type="text"
        id="fullName"
        name="fullName"
        required
        placeholder="Tu nombre completo"
      />
    </div>

    <div class="form-group">
      <label for="email">Correo electrónico</label>
      <input
        type="email"
        id="email"
        name="email"
        required
        placeholder="tu@email.com"
      />
    </div>

    <div class="form-group">
      <label for="password">Contraseña</label>
      <input
        type="password"
        id="password"
        name="password"
        required
        placeholder="Mínimo 6 caracteres"
        minlength="6"
      />
    </div>

    <div class="form-group">
      <label for="confirmPassword">Confirmar contraseña</label>
      <input
        type="password"
        id="confirmPassword"
        name="confirmPassword"
        required
        placeholder="Repite tu contraseña"
      />
    </div>

    <div id="signupError" class="error-message" style="display: none;"></div>

    <button type="submit" id="signupButton" class="auth-button">
      Registrarse
    </button>
  </form>

  <div class="auth-links">
    <p>
      ¿Ya tienes cuenta? <a href="/login" class="auth-link"
        >Inicia sesión aquí</a
      >
    </p>
  </div>
</div>

<script type="module">
  import { register } from "../scripts/auth.js";

  document
    .getElementById("signupForm")
    .addEventListener("submit", async (e) => {
      e.preventDefault();

      const form = e.target;
      const button = document.getElementById("signupButton");
      const errorDiv = document.getElementById("signupError");

      const formData = new FormData(form);
      const userData = {
        username: formData.get("username"),
        fullName: formData.get("fullName"),
        email: formData.get("email"),
        password: formData.get("password"),
        confirmPassword: formData.get("confirmPassword"),
      };

      // Validaciones
      if (
        !userData.email ||
        !userData.password ||
        !userData.username ||
        !userData.fullName
      ) {
        showError(errorDiv, "Por favor completa todos los campos");
        return;
      }

      if (userData.password !== userData.confirmPassword) {
        showError(errorDiv, "Las contraseñas no coinciden");
        return;
      }

      if (userData.password.length < 6) {
        showError(errorDiv, "La contraseña debe tener al menos 6 caracteres");
        return;
      }

      if (!userData.username.match(/^[a-zA-Z0-9_]+$/)) {
        showError(
          errorDiv,
          "El nombre de usuario solo puede contener letras, números y guiones bajos"
        );
        return;
      }

      // Estado de carga
      button.disabled = true;
      button.textContent = "Creando cuenta...";
      hideError(errorDiv);

      try {
        // Usamos TU función de registro
        const result = await register(userData.email, userData.password, {
          username: userData.username,
          fullName: userData.fullName,
        });

        if (result.success) {
          console.log("Registro exitoso, redirigiendo...");
          // Mostrar mensaje de éxito
          showError(errorDiv, "¡Cuenta creada! Redirigiendo...", "success");
        } else {
          showError(errorDiv, result.error);
        }
      } catch (error) {
        showError(errorDiv, "Error inesperado al crear la cuenta");
        console.error("Signup error:", error);
      } finally {
        button.disabled = false;
        button.textContent = "Registrarse";
      }
    });

  function showError(errorDiv, message, type = "error") {
    errorDiv.textContent = message;
    errorDiv.style.display = "block";
    errorDiv.className =
      type === "success" ? "success-message" : "error-message";
  }

  function hideError(errorDiv) {
    errorDiv.style.display = "none";
  }
</script>

<style>
  .auth-form-container {
    max-width: 400px;
    width: 100%;
    background: white;
    padding: 2rem;
    border-radius: 8px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  }

  .auth-form {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .form-group {
    display: flex;
    flex-direction: column;
  }

  .form-group label {
    margin-bottom: 0.5rem;
    font-weight: 500;
  }

  .form-group input {
    padding: 0.75rem;
    border: 1px solid #ddd;
    border-radius: 4px;
    font-size: 1rem;
  }

  .auth-button {
    padding: 0.75rem;
    background: #5f6ee7;
    color: white;
    border: none;
    border-radius: 4px;
    font-size: 1rem;
    cursor: pointer;
    transition: background 0.2s;
  }

  .auth-button:hover {
    background: #4c60aa;
  }

  .auth-button:disabled {
    background: #ccc;
    cursor: not-allowed;
  }

  .error-message {
    background: #fee;
    color: #c33;
    padding: 0.75rem;
    border-radius: 4px;
    border: 1px solid #fcc;
  }

  .success-message {
    background: #efe;
    color: #363;
    padding: 0.75rem;
    border-radius: 4px;
    border: 1px solid #cfc;
  }

  .auth-links {
    margin-top: 1.5rem;
    text-align: center;
  }

  .auth-link {
    color: #5f6ee7;
    text-decoration: none;
  }

  .auth-link:hover {
    text-decoration: underline;
  }
</style>
