---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Minna">
  <div class="loading-page">
    <div class="loading-content">
      <p>Redirigiendo...</p>
    </div>
  </div>
</Layout>

<script>
  // Redirigir autom치ticamente basado en autenticaci칩n
  import { initAuth, getCurrentUser } from "../scripts/auth.js";

  document.addEventListener("DOMContentLoaded", async () => {
    await initAuth();

    // Peque침o delay para asegurar que la autenticaci칩n se inicialice
    setTimeout(() => {
      const user = getCurrentUser();
      if (user) {
        window.location.href = "/dashboard";
      } else {
        window.location.href = "/login";
      }
    }, 500);
  });
</script>

<style>
  .loading-page {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  }

  .loading-content {
    text-align: center;
    color: white;
  }
</style>
